<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme with dark mode -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color - iOS blue -->
        <item name="colorPrimary">#007AFF</item>
        <item name="colorPrimaryDark">#0056B3</item>
        <item name="colorAccent">#007AFF</item>
        
        <!-- Background colors -->
        <item name="android:windowBackground">#000000</item>
        <item name="android:colorBackground">#000000</item>
        
        <!-- Status bar -->
        <item name="android:statusBarColor">#000000</item>
        <item name="android:windowLightStatusBar">false</item>
        
        <!-- Navigation bar -->
        <item name="android:navigationBarColor">#000000</item>
        <item name="android:windowLightNavigationBar">false</item>
        
        <!-- Text colors -->
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="android:textColorSecondary">#EBEBF5</item>
    </style>

    <!-- Splash screen style -->
    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">#000000</item>
    </style>
</resources>
